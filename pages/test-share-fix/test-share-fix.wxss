/* pages/test-share-fix/test-share-fix.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.test-controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn.primary {
  background-color: #007aff;
  color: white;
}

.btn.secondary {
  background-color: #34c759;
  color: white;
}

.test-results {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.result-header {
  background-color: #f1f3f4;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.log-container {
  height: 600rpx;
  padding: 0;
}

.log-item {
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  border-bottom: 1rpx solid #eee;
  font-family: 'Monaco', 'Consolas', monospace;
}

.log-item.success {
  background-color: #f0f9ff;
  color: #0066cc;
}

.log-item.error {
  background-color: #fff5f5;
  color: #dc3545;
}

.log-item.celebration {
  background-color: #f0fff4;
  color: #28a745;
  font-weight: bold;
}

.test-summary {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.summary-header {
  background-color: #fff3cd;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  color: #856404;
}

.path-item {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.path-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
  margin-bottom: 8rpx;
}

.path-value {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
  word-break: break-all;
  font-family: 'Monaco', 'Consolas', monospace;
  background-color: #f8f9fa;
  padding: 12rpx;
  border-radius: 8rpx;
} 