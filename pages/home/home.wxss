.home-container {
  padding: 0;
  background-color: var(--white);
}

/* 用户信息栏 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-info-details {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 34rpx;
  font-weight: 500;
}

.user-login-time {
  font-size: 24rpx;
  color: var(--light-text-color);
  margin-top: 6rpx;
}

.add-contact {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-add {
  width: 40rpx;
  height: 40rpx;
}

/* 会话列表标题 */
.section-title {
  font-size: 28rpx;
  color: var(--light-text-color);
  padding: 20rpx 30rpx;
  background-color: var(--background-color);
}

/* 会话列表 */
.conversation-list {
  flex: 1;
  width: 100%;
}

.conversation-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.avatar-container {
  position: relative;
  margin-right: 20rpx;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0; /* 确保文本溢出时能正确截断 */
}

.conversation-top-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: var(--light-text-color);
}

.conversation-bottom-row {
  width: 100%;
}

.message-preview {
  font-size: 28rpx;
  color: var(--light-text-color);
  width: 100%;
}

/* 加载和空状态 */
.loading-container, .empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: var(--light-text-color);
  margin-top: 20rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
  position: relative;
}

.header {
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
  padding: 0 30rpx;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  background-color: #ffffff;
}

/* 加载中状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 60rpx;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

/* 聊天列表 */
.conversation-list {
  flex: 1;
  overflow-y: auto;
}

.conversation-item {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #f43530;
  color: #ffffff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  font-weight: bold;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.conversation-top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.time {
  font-size: 24rpx;
  color: #999999;
}

.conversation-bottom-row {
  width: 100%;
}

.message-preview {
  font-size: 28rpx;
  color: #999999;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-destroyed {
  font-size: 28rpx;
  color: #ff9800;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07C160;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 欢迎页内容 */
.welcome-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 60rpx 50rpx;
}

.welcome-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 80rpx;
}

.welcome-title {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: #666666;
  text-align: center;
  max-width: 80%;
  line-height: 1.5;
}

/* 邀请状态 */
.invite-status {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.invite-status-text {
  font-size: 28rpx;
  color: #666666;
  background-color: #f8f8f8;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
}

/* 按钮样式 */
.button-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 50rpx;
}

.invite-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  border-radius: 45rpx;
  margin-bottom: 20rpx;
}

.black {
  background-color: #333333;
  color: #ffffff;
}

.invite-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
} 