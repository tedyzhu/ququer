.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.logo-container {
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
  line-height: 1.5;
  width: 80%;
}

.user-info-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 40rpx;
  background-color: transparent;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.nickname-input {
  width: 80%;
  height: 88rpx;
  border-bottom: 1px solid #ddd;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80%;
  height: 88rpx;
  background: #000000;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-top: 30rpx;
  line-height: 1.5;
}

.tips {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.debug-section {
  margin-top: 60rpx;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  width: 100%;
  display: flex;
  justify-content: center;
}

.debug-button {
  margin: 10rpx;
  font-size: 24rpx;
  padding: 10rpx;
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
} 