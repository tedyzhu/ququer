.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 销毁计时器 */
.destroy-timer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  z-index: 999;
}

.timer-text {
  font-weight: bold;
}

/* 消息区域 */
.messages-container {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  margin: 40rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 消息列表 */
.messages-list {
  display: flex;
  flex-direction: column;
}

.message-wrapper {
  display: flex;
  margin-bottom: 30rpx;
  max-width: 80%;
}

.message-wrapper.self {
  align-self: flex-end;
  flex-direction: row-reverse;
}

.message-wrapper.other {
  align-self: flex-start;
}

/* 系统消息 */
.message-wrapper.system {
  align-self: center;
  max-width: 90%;
}

.system-message {
  background-color: rgba(0, 0, 0, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
}

.system-message .message-text {
  font-size: 24rpx;
  color: #888888;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin: 0 16rpx;
}

.message-content {
  position: relative;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 10rpx;
  max-width: calc(100% - 112rpx);
  word-wrap: break-word;
  word-break: break-all;
}

.message-wrapper.self .message-content {
  background-color: #9EEA6A;
}

.message-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 6rpx;
  text-align: right;
}

/* 销毁中的消息 */
.message-content.destroying {
  background-color: #ffecb3;
  animation: pulse 1s infinite alternate;
}

@keyframes pulse {
  0% { opacity: 1; }
  100% { opacity: 0.7; }
}

/* 已销毁的消息 */
.message-content.destroyed {
  background-color: #f5f5f5;
}

.message-content.destroyed .message-text {
  color: #999999;
  font-style: italic;
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f6f6f6;
  border-top: 1rpx solid #e6e6e6;
}

.voice-btn, .emoji-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin: 0 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  min-width: 112rpx;
  height: 72rpx;
  background-color: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

/* 创建聊天状态覆盖层 */
.creating-chat-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.creating-chat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.creating-chat-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.creating-chat-text {
  font-size: 34rpx;
  color: #333333;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 