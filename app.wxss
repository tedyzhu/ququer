/**
 * 全局样式
 */
page {
  --primary-color: #42a5f5;
  --secondary-color: #64b5f6;
  --text-color: #333333;
  --light-text-color: #999999;
  --border-color: #eeeeee;
  --background-color: #f5f5f5;
  --white: #ffffff;
  --red: #ff5252;
  --success-color: #4caf50;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--background-color);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: 4px;
}

.btn-primary:active {
  background-color: var(--secondary-color);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.text-center {
  text-align: center;
}

.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  min-width: 16rpx;
  height: 16rpx;
  padding: 4rpx;
  background-color: var(--red);
  color: var(--white);
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-destroyed {
  color: var(--light-text-color);
  font-style: italic;
}

.divider {
  height: 1px;
  background-color: var(--border-color);
  width: 100%;
  margin: 10rpx 0;
} 