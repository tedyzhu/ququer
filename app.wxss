/**
 * 全局样式
 */
page {
  --primary-color: #42a5f5;
  --secondary-color: #64b5f6;
  --text-color: #333333;
  --light-text-color: #999999;
  --border-color: #eeeeee;
  --background-color: #f5f5f5;
  --white: #ffffff;
  --red: #ff5252;
  --success-color: #4caf50;
  
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: var(--background-color);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--white);
  border: none;
  border-radius: 4px;
}

.btn-primary:active {
  background-color: var(--secondary-color);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.text-center {
  text-align: center;
}

.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  min-width: 16rpx;
  height: 16rpx;
  padding: 4rpx;
  background-color: var(--red);
  color: var(--white);
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-destroyed {
  color: var(--light-text-color);
  font-style: italic;
}

.divider {
  height: 1px;
  background-color: var(--border-color);
  width: 100%;
  margin: 10rpx 0;
} 

/* 🔥 全局强制去除消息气泡小尾巴 - 最高优先级 */
.message-bubble,
.message-content,
.bubble-content,
.message-bubble::before,
.message-bubble::after,
.message-content::before,
.message-content::after,
.bubble-content::before,
.bubble-content::after,
.other-bubble .message-bubble,
.self-bubble .message-bubble,
.message-other .message-bubble,
.message-self .message-bubble,
.normal-message .message-bubble,
.other .message-content,
.self .message-content {
  border-radius: 16rpx !important;
  border-top-left-radius: 16rpx !important;
  border-top-right-radius: 16rpx !important;
  border-bottom-left-radius: 16rpx !important;
  border-bottom-right-radius: 16rpx !important;
  border: none !important;
  outline: none !important;
}

/* 🔥 全局禁用所有可能的伪元素小尾巴 */
.message-bubble::before,
.message-bubble::after,
.message-content::before,
.message-content::after,
.bubble-content::before,
.bubble-content::after,
.other-bubble::before,
.other-bubble::after,
.self-bubble::before,
.self-bubble::after,
.message-other::before,
.message-other::after,
.message-self::before,
.message-self::after,
.other::before,
.other::after,
.self::before,
.self::after {
  border: none !important;
}

/* 🔥 特别针对可能创建小尾巴的伪元素 */
[class*="message"]::before,
[class*="message"]::after,
[class*="bubble"]::before,
[class*="bubble"]::after {
  display: none !important;
  content: none !important;
  border: none !important;
  width: 0 !important;
  height: 0 !important;
} 