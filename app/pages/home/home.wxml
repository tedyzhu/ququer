<view class="container">
  <view class="header">
    <view class="title">会话列表</view>
  </view>
  
  <view class="content">
    <view wx:if="{{isLoading}}" class="loading-container">
      <view class="loading"></view>
      <text>加载中...</text>
    </view>
    
    <view wx:elif="{{conversations.length === 0}}" class="empty-container">
      <image class="empty-icon" src="/assets/images/logo.svg" mode="aspectFit"></image>
      <text class="empty-text">暂无会话</text>
      <text class="empty-desc">点击右下角按钮开始新的对话</text>
    </view>
    
    <view wx:else class="conversation-list">
      <!-- 会话列表内容 -->
    </view>
  </view>
  
  <view class="add-btn" bindtap="onAddBtnTap">+</view>
</view> 