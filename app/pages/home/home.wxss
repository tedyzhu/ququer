.home-container {
  padding: 0;
  background-color: var(--white);
}

/* 用户信息栏 */
.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-info-details {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 34rpx;
  font-weight: 500;
}

.user-login-time {
  font-size: 24rpx;
  color: var(--light-text-color);
  margin-top: 6rpx;
}

.add-contact {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-add {
  width: 40rpx;
  height: 40rpx;
}

/* 会话列表标题 */
.section-title {
  font-size: 28rpx;
  color: var(--light-text-color);
  padding: 20rpx 30rpx;
  background-color: var(--background-color);
}

/* 会话列表 */
.conversation-list {
  flex: 1;
  width: 100%;
}

.conversation-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.avatar-container {
  position: relative;
  margin-right: 20rpx;
}

.conversation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0; /* 确保文本溢出时能正确截断 */
}

.conversation-top-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: var(--light-text-color);
}

.conversation-bottom-row {
  width: 100%;
}

.message-preview {
  font-size: 28rpx;
  color: var(--light-text-color);
  width: 100%;
}

/* 加载和空状态 */
.loading-container, .empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .empty-text {
  font-size: 28rpx;
  color: var(--light-text-color);
  margin-top: 20rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 