<view class="container">
  <view class="logo-container">
    <image class="logo" src="/assets/images/logo.svg" mode="aspectFit"></image>
  </view>
  <view class="title">秘信</view>
  <view class="subtitle">阅后即焚，保护隐私</view>
  
  <form bindsubmit="onFormSubmit">
    <view class="user-info-container">
      <button class="avatar-wrapper" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar">
        <image class="avatar" src="{{avatarUrl}}"></image>
      </button>
      <view class="tips">点击头像可更换(真机测试)</view>
      <input type="nickname" name="nickname" class="nickname-input" placeholder="请输入昵称" />
    </view>
    
    <button class="login-btn" form-type="submit" loading="{{isLoading}}">
      <image class="wechat-icon" src="/assets/images/logo.svg" mode="aspectFit"></image>
      微信一键登录
    </button>
  </form>
</view> 