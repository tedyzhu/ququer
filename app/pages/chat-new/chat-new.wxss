.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* ç´§æ€¥ä¿®å¤ä¿¡æ¯æ  */
.emergency-info {
  background: linear-gradient(135deg, #4CAF50, #2196F3);
  color: white;
  padding: 12rpx 24rpx;
  position: relative;
  animation: slideDown 0.5s ease-out;
}

@keyframes slideDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

.emergency-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.emergency-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.emergency-desc {
  font-size: 24rpx;
  flex: 1;
}

.emergency-close {
  background: rgba(255,255,255,0.3);
  color: white;
  border: none;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
  line-height: 1;
  padding: 0;
}

/* æ¶ˆæ¯åˆ—è¡¨ */
.message-list {
  flex: 1;
  padding: 20rpx;
  /* ğŸ”¥ é¢„ç•™åº•éƒ¨ç©ºé—´ï¼Œé¿å…è¢«å¸åº•è¾“å…¥æ é®æŒ¡ */
  padding-bottom: calc(160rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  overflow-y: auto;
}

.message-item {
  margin-bottom: 24rpx;
}

.message-wrapper {
  display: flex;
  flex-direction: column;
}

.message-wrapper.self {
  align-items: flex-end;
}

.message-wrapper.other {
  align-items: flex-start;
}

/* ç³»ç»Ÿæ¶ˆæ¯ */
.system-message {
  background-color: #e3f2fd;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin: 0 80rpx;
  text-align: center;
  border: 2rpx solid #2196F3;
}

.system-text {
  color: #1976d2;
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

/* æ™®é€šæ¶ˆæ¯ */
.normal-message {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}

.message-bubble {
  padding: 20rpx;
  border-radius: 16rpx !important;
  word-wrap: break-word;
  position: relative;
  border: none;
  outline: none;
}

.self-bubble {
  background-color: #95EC69;
  color: #333333;
  border-radius: 16rpx !important;
}

.other-bubble {
  background-color: #ffffff;
  color: #333333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx !important;
}

.message-content {
  font-size: 30rpx;
  line-height: 1.4;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

.self .message-time {
  text-align: right;
}

.other .message-time {
  text-align: left;
}

/* è¾“å…¥æ  */
.input-bar {
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #e0e0e0;
  box-shadow: 0 -4rpx 8rpx rgba(0,0,0,0.1);
  /* ğŸ”¥ å¸åº•å›ºå®š */
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  /* ğŸ”¥ iOS å®‰å…¨åŒº */
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.message-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  margin-right: 16rpx;
  background-color: #f8f8f8;
}

.send-button {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  min-width: 120rpx;
}

.send-button:active {
  background-color: #0056cc;
} 

