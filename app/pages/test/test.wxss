/* 邀请链接自动测试页面样式 */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.control-section {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.chat-btn {
  margin-top: 20rpx !important;
}

.test-btn {
  margin-top: 15rpx !important;
  font-size: 28rpx !important;
}

.log-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.log-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.log-content {
  flex: 1;
  height: 100%;
}

.log-item {
  font-size: 24rpx;
  padding: 8rpx 0;
  border-bottom: 1px solid #eee;
  word-wrap: break-word;
}

.no-logs {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-top: 100rpx;
}

.info-section {
  background-color: #f0f9ff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.info-label {
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
  width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  color: #666;
  flex: 1;
} 