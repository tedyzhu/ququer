/* 自定义标题栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #ededed;
  border-bottom: 1rpx solid #d7d7d7;
  padding: 0 30rpx;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.navbar-left {
  width: 30rpx;
  height: 60rpx;
}

.navbar-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chat-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
}

.back-icon, .more-icon {
  font-size: 40rpx;
  color: #000000;
  font-weight: 300;
}

.back-icon {
  font-size: 48rpx;
  transform: scaleX(1.5);
}

.more-icon {
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ededed;
  position: relative;
  padding-top: calc(88rpx + constant(safe-area-inset-top));
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

/* 销毁计时器 */
.destroy-timer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  z-index: 999;
}

.timer-text {
  font-weight: bold;
}

/* 消息区域 */
.messages-container {
  flex: 1;
  padding: 20rpx 0;
  box-sizing: border-box;
  overflow-y: auto;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  margin: 40rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 消息列表 - 微信原生样式 */
.messages-list {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  min-height: 100%;
}

/* 消息项容器 */
.message-item {
  margin-bottom: 32rpx;
}

/* 时间分隔线 */
.message-time-divider {
  text-align: center;
  margin: 30rpx 0 20rpx 0;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

/* 消息行布局 - 修复对齐问题 */
.message-row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

/* 对方消息 - 左侧布局 */
.message-other .message-row {
  flex-direction: row;
  justify-content: flex-start;
}

/* 自己消息 - 右侧布局 */
.message-self .message-row {
  flex-direction: row-reverse;
  justify-content: flex-start;
}

/* 头像样式 */
.message-avatar {
  flex-shrink: 0;
  margin: 0 12rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

/* 消息气泡容器 */
.message-bubble-wrapper {
  max-width: 60%;
  position: relative;
}

/* 对方消息气泡 */
.other-bubble .message-bubble {
  background-color: #ffffff;
  border-radius: 0 16rpx 16rpx 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.other-bubble .message-bubble::before {
  content: '';
  position: absolute;
  left: -10rpx;
  bottom: 24rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-right-color: #ffffff;
  border-left: none;
}

/* 自己消息气泡 */
.self-bubble .message-bubble {
  background-color: #95EC69;
  border-radius: 16rpx 0 16rpx 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.self-bubble .message-bubble::after {
  content: '';
  position: absolute;
  right: -10rpx;
  bottom: 24rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-left-color: #95EC69;
  border-right: none;
}

/* 消息气泡内容 */
.message-bubble {
  padding: 20rpx 24rpx;
  min-height: 40rpx;
  display: flex;
  flex-direction: column;
}

.bubble-content {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
}

/* 系统消息 */
.message-wrapper.system {
  align-self: center;
  max-width: 90%;
  margin: 20rpx 0;
}

.system-message {
  background-color: rgba(0, 0, 0, 0.1);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  text-align: center;
}

.system-message .message-text {
  font-size: 24rpx;
  color: #888888;
}

/* 消息底部信息 */
.message-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
}

/* 销毁倒计时提示 - 微信样式 */
.destroy-countdown {
  font-size: 20rpx;
  color: #ff6b6b;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  margin-top: 8rpx;
  text-align: center;
  animation: countdown-blink 1s infinite alternate;
}

@keyframes countdown-blink {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}

/* 销毁中的消息 */
.message-bubble.destroying {
  background-color: #ffecb3 !important;
  animation: pulse 1s infinite alternate;
}

@keyframes pulse {
  0% { opacity: 1; }
  100% { opacity: 0.7; }
}

/* 已销毁的消息 */
.message-bubble.destroyed {
  background-color: #f5f5f5 !important;
}

.message-bubble.destroyed .bubble-content {
  color: #999999;
  font-style: italic;
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f6f6f6;
  border-top: 1rpx solid #e6e6e6;
}

.voice-btn, .emoji-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin: 0 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  min-width: 112rpx;
  height: 72rpx;
  background-color: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

/* 创建聊天状态覆盖层 */
.creating-chat-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.creating-chat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.creating-chat-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.creating-chat-text {
  font-size: 34rpx;
  color: #333333;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
} 