.burn-after-reading-hint {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  padding: 8rpx 16rpx;
