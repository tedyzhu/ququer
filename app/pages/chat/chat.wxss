/* 自定义标题栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #ededed;
  border-bottom: 1rpx solid #d7d7d7;
  padding: 0 30rpx;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.navbar-left {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  user-select: none;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.navbar-left:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.navbar-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chat-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #000000;
  text-align: center;
}

.back-icon, .more-icon, .menu-icon {
  font-size: 40rpx;
  color: #000000;
  font-weight: 300;
}

.back-icon {
  font-size: 48rpx;
  transform: scaleX(1.5);
}

.more-icon {
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

.menu-icon {
  font-size: 32rpx;
  letter-spacing: 2rpx;
  padding: 15rpx;
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 50%;
  display: block;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  user-select: none;
}

.menu-icon:active {
  opacity: 0.6;
  background-color: rgba(0, 0, 0, 0.1);
  transform: scale(0.95);
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ededed;
  position: relative;
  padding-top: calc(88rpx + constant(safe-area-inset-top));
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

/* 销毁计时器 */
.destroy-timer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  z-index: 999;
}

.timer-text {
  font-weight: bold;
}

/* 消息区域 */
.messages-container {
  flex: 1;
  padding: 20rpx 0;
  /* 🔥 预留底部空间，避免被吸底输入栏遮挡 */
  padding-bottom: calc(160rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-y: auto;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  margin: 40rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 消息列表 - 微信原生样式 */
.messages-list {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  min-height: 100%;
}

/* 消息项容器 */
.message-item {
  margin-bottom: 32rpx;
}

/* 时间分隔线 */
.message-time-divider {
  text-align: center;
  margin: 30rpx 0 20rpx 0;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

/* 消息行布局 - 修复对齐问题 */
.message-row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

/* 对方消息 - 左侧布局 */
.message-other .message-row {
  justify-content: flex-start;
}

/* 自己消息 - 右侧布局 */
.message-self .message-row {
  justify-content: flex-end;
}

/* 消息气泡容器 */
.message-bubble-wrapper {
  max-width: 60%;
  position: relative;
}

/* 对方消息气泡 */
.other-bubble .message-bubble {
  background-color: #ffffff;
  border-radius: 16rpx !important;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 自己消息气泡 */
.self-bubble .message-bubble {
  background-color: #95EC69;
  border-radius: 16rpx !important;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 消息气泡内容 */
.message-bubble {
  padding: 20rpx 24rpx;
  min-height: 40rpx;
  display: flex;
  flex-direction: column;
  border-radius: 16rpx !important;
  border: none;
  outline: none;
}

.bubble-content {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
}

/* 🔥 系统消息 - 彻底消除空气泡效果 */
.message-wrapper.system {
  align-self: center;
  max-width: 100%;
  margin: 6rpx 0; /* 🔥 进一步减少间距 */
  padding: 0; /* 🔥 移除可能的内边距 */
}

.system-message {
  background-color: rgba(0, 0, 0, 0.03); /* 🔥 进一步降低背景透明度 */
  padding: 6rpx 12rpx; /* 🔥 进一步减少内边距 */
  border-radius: 12rpx; /* 🔥 减小圆角 */
  text-align: center;
  max-width: 50%; /* 🔥 进一步限制宽度 */
  margin: 0 auto; /* 🔥 居中显示 */
  box-sizing: border-box;
}

.system-message .message-text {
  font-size: 20rpx; /* 🔥 进一步减小字体 */
  color: #AAAAAA; /* 🔥 调整颜色更淡 */
  line-height: 1.2; /* 🔥 减少行高 */
  margin: 0;
  padding: 0;
}

/* 消息底部信息 */
.message-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
}

/* 销毁倒计时提示 - 微信样式 */
.destroy-countdown {
  font-size: 20rpx;
  color: #ff6b6b;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  margin-top: 8rpx;
  text-align: center;
  animation: countdown-blink 1s infinite alternate;
}

@keyframes countdown-blink {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}

/* 销毁中的消息 - 停留阶段（无视觉变化） */
.message-bubble.destroying {
  /* 停留阶段保持原始状态，无特殊样式 */
}

/* 渐变销毁的消息 - 透明度变化阶段 */
.message-bubble.fading {
  transition: opacity 1s ease-in-out;
  animation: none; /* 停止脉冲动画 */
}

/* 销毁倒计时提示 */
.destroy-countdown {
  position: absolute;
  top: -25rpx;
  right: 10rpx;
  background-color: rgba(255, 87, 34, 0.9);
  color: white;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  z-index: 10;
}

.countdown-text {
  font-size: 20rpx;
  font-weight: bold;
}

/* 已销毁的消息 */
.message-bubble.destroyed {
  background-color: #f5f5f5 !important;
}

.message-bubble.destroyed .bubble-content {
  color: #999999;
  font-style: italic;
}

/* 输入区域 */
.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  /* 🔥 吸底固定 */
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background-color: #f6f6f6;
  border-top: 1rpx solid #e6e6e6;
  /* 🔥 iOS 安全区 */
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.voice-btn, .emoji-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin: 0 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  min-width: 112rpx;
  height: 72rpx;
  background-color: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

/* 创建聊天状态覆盖层 */
.creating-chat-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.creating-chat-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.creating-chat-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #333333;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.creating-chat-text {
  font-size: 34rpx;
  color: #333333;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 🔥 阅后即焚增强样式 */

/* 已销毁消息的内容样式 */
.destroyed-content {
  background: linear-gradient(135deg, #ff6b6b, #ee5a5a);
  color: #ffffff !important;
  text-align: center;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.destroyed-text {
  font-size: 28rpx;
  display: block;
}

/* 点击查看提示 */
.tap-to-read {
  margin-top: 8rpx;
  padding: 6rpx 16rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  text-align: center;
}

.tap-hint {
  font-size: 22rpx;
  color: #666666;
  font-style: italic;
}

/* 增强的销毁倒计时样式 */
.destroy-countdown .countdown-text {
  font-size: 22rpx;
  color: #ff4757;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

/* 销毁中消息的动画优化 - 已移除停留阶段的视觉效果 */
.message-bubble.destroying {
  /* 停留阶段保持原始外观，无特殊动画 */
}

/* 已销毁消息的最终样式 */
.message-bubble.destroyed {
  background: linear-gradient(135deg, #f8f9fa, #e9ecef) !important;
  border: 2rpx dashed #dee2e6;
  opacity: 0.8;
}

/* 在线状态指示器（可选） */
.online-indicator {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #52c41a;
  border-radius: 50%;
  border: 3rpx solid #ffffff;
  animation: online-pulse 2s infinite;
}

@keyframes online-pulse {
  0% { 
    box-shadow: 0 0 0 0 rgba(82, 196, 26, 0.7);
  }
  70% { 
    box-shadow: 0 0 0 20rpx rgba(82, 196, 26, 0);
  }
  100% { 
    box-shadow: 0 0 0 0 rgba(82, 196, 26, 0);
  }
}

/* 消息点击反馈 */
.message-bubble:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

/* 特殊提示文字 */
.burn-after-reading-hint {
  position: absolute;
  top: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  white-space: nowrap;
  opacity: 0;
  animation: hint-fade-in-out 3s ease-in-out;
}

@keyframes hint-fade-in-out {
  0%, 100% { opacity: 0; transform: translateX(-50%) translateY(10rpx); }
  20%, 80% { opacity: 1; transform: translateX(-50%) translateY(0); }
} 

/* 🔥 强制统一所有消息气泡样式，确保没有小尾巴 */
.message-bubble,
.message-bubble::before,
.message-bubble::after,
.other-bubble .message-bubble,
.self-bubble .message-bubble,
.other-bubble .message-bubble::before,
.other-bubble .message-bubble::after,
.self-bubble .message-bubble::before,
.self-bubble .message-bubble::after {
  border-radius: 16rpx !important;
  border-top-left-radius: 16rpx !important;
  border-top-right-radius: 16rpx !important;
  border-bottom-left-radius: 16rpx !important;
  border-bottom-right-radius: 16rpx !important;
  border: none !important;
  outline: none !important;
}

/* 🔥 彻底移除所有伪元素（小尾巴） */
.message-bubble::before,
.message-bubble::after,
.other-bubble::before,
.other-bubble::after,
.self-bubble::before,
.self-bubble::after,
.other-bubble .message-bubble::before,
.other-bubble .message-bubble::after,
.self-bubble .message-bubble::before,
.self-bubble .message-bubble::after {
  display: none !important;
  content: none !important;
  border: none !important;
  width: 0 !important;
  height: 0 !important;
}

/* 🔥 B端头像隐藏 - 隐藏自己发送消息时的头像 */
.message-self image[class*="avatar"],
.message-self .avatar,
.self-bubble image[class*="avatar"],
.self-bubble .avatar,
.message-self image[src*="avatar"],
.self-bubble image[src*="avatar"] {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  width: 0 !important;
  height: 0 !important;
}

/* 🔥 强制隐藏所有可能的头像元素 */
.message-self image:not(.message-image),
.self-bubble image:not(.message-image),
.message-other image:not(.message-image),
.other-bubble image:not(.message-image) {
  display: none !important;
  visibility: hidden !important;
  opacity: 0 !important;
  width: 0 !important;
  height: 0 !important;
}

/* 🔥 针对B端的额外头像隐藏规则 */
.message-self .avatar-container,
.message-self .user-avatar,
.self-bubble .avatar-container,
.self-bubble .user-avatar {
  display: none !important;
}

/* 🔥 但是保留消息内容中的图片 */
.message-self .message-image,
.self-bubble .message-image,
.message-self .bubble-content image,
.self-bubble .bubble-content image {
  display: block !important;
} 