/* 🔥 页面根元素优化 - 防止键盘影响 */
page {
  height: 100vh;
  width: 100vw;
  overflow: hidden; /* 🔥 防止页面滚动影响固定定位元素 */
  background-color: #ededed;
  /* 🔥 【HOTFIX-v1.3.75】强制固定视窗大小，不受键盘影响 */
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 🔥 【HOTFIX-v1.3.75】使用GPU加速确保页面固定 */
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
}

/* 🔥 全局容器优化 */
.container {
  height: 100vh;
  overflow: hidden;
  position: relative;
}

/* 自定义标题栏 - 修复键盘遮挡问题 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 🔥 【HOTFIX-v1.3.75】标题栏内容高度44px + 安全区域 */
  height: 44px;
  min-height: 44px;
  background-color: #ededed;
  border-bottom: 1rpx solid #d7d7d7;
  padding: 0 16rpx; /* 🔥 调整左右边距 */
  /* 🔥 【HOTFIX-v1.3.75】顶部padding用于状态栏区域 */
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  /* 🔥 【HOTFIX-v1.3.75】极高z-index，确保在键盘之上 */
  z-index: 999999;
  /* 🔥 【HOTFIX-v1.3.75】content-box: padding-top作为额外空间 */
  box-sizing: content-box;
  /* 🔥 【HOTFIX-v1.3.75】使用translate3d强制GPU加速和固定定位 */
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  /* 🔥 增强固定定位性能优化 */
  will-change: auto; /* 改为auto避免过度优化 */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  /* 🔥 确保在所有情况下保持在顶部 */
  pointer-events: auto;
}

.navbar-left {
  /* 🔥 【HOTFIX-v1.3.74】调整左侧按钮尺寸，与标题栏高度匹配 */
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  user-select: none;
  border-radius: 50%;
  transition: background-color 0.2s ease;
  flex-shrink: 0; /* 🔥 防止被压缩 */
}

.navbar-left:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.navbar-right {
  /* 🔥 【HOTFIX-v1.3.74】调整右侧占位尺寸，确保对称 */
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0; /* 🔥 防止被压缩 */
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 🔥 【HOTFIX-v1.3.74】确保标题居中且不溢出 */
  overflow: hidden;
  height: 44px; /* 与标题栏同高 */
}

.chat-title {
  /* 🔥 【HOTFIX-v1.3.74】调整字体大小，与微信标准一致 */
  font-size: 17px; /* 微信标准标题字体大小 */
  font-weight: 600; /* 加粗，更醒目 */
  color: #000000;
  text-align: center;
  line-height: 44px; /* 🔥 与标题栏同高，确保垂直居中 */
  white-space: nowrap; /* 🔥 防止换行 */
  overflow: hidden; /* 🔥 超出隐藏 */
  text-overflow: ellipsis; /* 🔥 超出显示省略号 */
  max-width: 100%; /* 🔥 限制最大宽度 */
}

.back-icon, .more-icon, .menu-icon {
  font-size: 20px; /* 🔥 【HOTFIX-v1.3.74】调整图标大小 */
  color: #000000;
  font-weight: 400; /* 🔥 调整字重 */
}

.back-icon {
  font-size: 24px;
  transform: scaleX(1.5);
}

.more-icon {
  font-size: 20px;
  letter-spacing: 1px;
}

.menu-icon {
  /* 🔥 【HOTFIX-v1.3.74】调整菜单图标样式 */
  font-size: 22px; /* 三个点的大小 */
  letter-spacing: 0;
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px; /* 与按钮同宽 */
  height: 44px; /* 与按钮同高 */
  box-sizing: border-box;
  user-select: none;
  font-weight: 700; /* 加粗三个点 */
  line-height: 1; /* 🔥 确保垂直居中 */
}

.menu-icon:active {
  opacity: 0.6;
  background-color: rgba(0, 0, 0, 0.1);
  transform: scale(0.95);
}

.chat-container {
  display: flex;
  flex-direction: column;
  /* 🔥 使用固定视窗高度，不受键盘影响 */
  height: 100vh;
  width: 100vw;
  background-color: #ededed;
  /* 🔥 使用absolute定位，相对于fixed的page元素 */
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 🔥 【HOTFIX-v1.3.74】调整padding-top以匹配新的标题栏高度 */
  padding-top: calc(44px + constant(safe-area-inset-top));
  padding-top: calc(44px + env(safe-area-inset-top));
  /* 🔥 防止键盘推动容器 */
  box-sizing: border-box;
  overflow: hidden;
}

/* 销毁计时器 */
.destroy-timer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
  z-index: 999;
}

.timer-text {
  font-weight: bold;
}

/* 消息区域 */
.messages-container {
  flex: 1;
  padding: 20rpx 0;
  /* 🔥 预留底部空间，避免被吸底输入栏遮挡 */
  padding-bottom: calc(160rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-y: auto;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  margin: 40rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 消息列表 - 微信原生样式 */
.messages-list {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
  min-height: 100%;
}

/* 消息项容器 */
.message-item {
  margin-bottom: 32rpx;
  /* 🔥 【HOTFIX-v1.3.73】消息项容器淡出过渡动画，5秒与fading同步 */
  transition: opacity 5s ease-in-out;
}

/* 时间分隔线 */
.message-time-divider {
  text-align: center;
  margin: 30rpx 0 20rpx 0;
  /* 🔥 【HOTFIX-v1.3.73】时间显示淡出过渡动画，5秒与fading同步 */
  transition: opacity 5s ease-in-out;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

/* 消息行布局 - 修复对齐问题 */
.message-row {
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

/* 对方消息 - 左侧布局 */
.message-other .message-row {
  justify-content: flex-start;
}

/* 自己消息 - 右侧布局 */
.message-self .message-row {
  justify-content: flex-end;
}

/* 消息气泡容器 */
.message-bubble-wrapper {
  max-width: 60%;
  position: relative;
  /* 🔥 【HOTFIX-v1.3.73】消息气泡容器淡出过渡动画，5秒与fading同步 */
  transition: opacity 5s ease-in-out;
}

/* 对方消息气泡 */
.other-bubble .message-bubble {
  background-color: #ffffff;
  border-radius: 16rpx !important;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 自己消息气泡 */
.self-bubble .message-bubble {
  background-color: #95EC69;
  border-radius: 16rpx !important;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 消息气泡内容 */
.message-bubble {
  padding: 20rpx 24rpx;
  min-height: 40rpx;
  display: flex;
  flex-direction: column;
  border-radius: 16rpx !important;
  border: none;
  outline: none;
}

.bubble-content {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
}

/* 🔥 系统消息 - 彻底消除空气泡效果 */
.message-wrapper.system {
  align-self: center;
  max-width: 100%;
  margin: 6rpx 0; /* 🔥 进一步减少间距 */
  padding: 0; /* 🔥 移除可能的内边距 */
  /* 🔥 【HOTFIX-v1.3.73】系统消息淡出过渡动画，5秒与fading同步 */
  transition: opacity 5s ease-in-out;
}

.system-message {
  background-color: rgba(0, 0, 0, 0.03); /* 🔥 进一步降低背景透明度 */
  padding: 6rpx 12rpx; /* 🔥 进一步减少内边距 */
  border-radius: 12rpx; /* 🔥 减小圆角 */
  text-align: center;
  max-width: 50%; /* 🔥 进一步限制宽度 */
  margin: 0 auto; /* 🔥 居中显示 */
  box-sizing: border-box;
  /* 🔥 【HOTFIX-v1.3.73】系统消息内层也应用淡出过渡动画，5秒与fading同步 */
  transition: opacity 5s ease-in-out;
}

.system-message .message-text {
  font-size: 20rpx; /* 🔥 进一步减小字体 */
  color: #AAAAAA; /* 🔥 调整颜色更淡 */
  line-height: 1.2; /* 🔥 减少行高 */
  margin: 0;
  padding: 0;
}

/* 消息底部信息 */
.message-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
}

/* 销毁倒计时提示 - 微信样式 */
.destroy-countdown {
  font-size: 20rpx;
  color: #ff6b6b;
  background-color: rgba(255, 107, 107, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  margin-top: 8rpx;
  text-align: center;
  animation: countdown-blink 1s infinite alternate;
}

@keyframes countdown-blink {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}

/* 销毁中的消息 - 停留阶段（无视觉变化） */
.message-bubble.destroying {
  /* 停留阶段保持原始状态，无特殊样式 */
}

/* 渐变销毁的消息 - 透明度变化阶段 */
.message-bubble.fading {
  transition: opacity 5s ease-in-out; /* 🔥 【HOTFIX-v1.3.73】5秒淡出过渡，与JS中的fadeDuration保持一致 */
  animation: none; /* 停止脉冲动画 */
}

/* 销毁倒计时提示 */
.destroy-countdown {
  position: absolute;
  top: -25rpx;
  right: 10rpx;
  background-color: rgba(255, 87, 34, 0.9);
  color: white;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  z-index: 10;
}

.countdown-text {
  font-size: 20rpx;
  font-weight: bold;
}

/* 已销毁的消息 */
.message-bubble.destroyed {
  background-color: #f5f5f5 !important;
}

.message-bubble.destroyed .bubble-content {
  color: #999999;
  font-style: italic;
}

/* 输入区域 - 优化键盘交互 */
.input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  /* 🔥 吸底固定 */
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000; /* 🔥 调整层级，低于标题栏但高于其他内容 */
  background-color: #f6f6f6;
  border-top: 1rpx solid #e6e6e6;
  /* 🔥 iOS 安全区 */
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  /* 🔥 确保输入区域始终可见 */
  box-sizing: border-box;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.voice-btn, .emoji-btn, .more-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  margin: 0 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.send-btn {
  min-width: 112rpx;
  height: 72rpx;
  background-color: #07C160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 16rpx;
}

