.input-area {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: var(--white);
  border-top: 1rpx solid var(--border-color);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input-box {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: var(--background-color);
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.text-input {
  flex: 1;
  height: 68rpx;
  font-size: 30rpx;
}

.toolbar {
  display: flex;
  flex-direction: row;
}

.tool-button {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-icon {
  width: 40rpx;
  height: 40rpx;
}

.send-button {
  width: 150rpx;
  height: 68rpx;
  margin-left: 20rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 10rpx;
  background-color: var(--light-text-color);
  color: var(--white);
  padding: 0;
}

.send-button.active {
  background-color: var(--primary-color);
}

