/* 消息项样式 */
.message-item {
  width: 100%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.message-self {
  align-items: flex-end;
}

.message-other {
  align-items: flex-start;
}

/* 消息气泡 */
.message-bubble {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 16rpx !important;
  position: relative;
  transition: opacity 0.5s ease;
  border: none;
  outline: none;
}

.message-self .message-bubble {
  background-color: #95EC69;
  color: #333333;
  border-radius: 16rpx !important;
}

.message-other .message-bubble {
  background-color: #ffffff;
  color: #333333;
  border-radius: 16rpx !important;
}

/* 图片消息 */
.message-image {
  max-width: 400rpx;
  border-radius: 8rpx;
}

/* 正在销毁状态 */
.destroying {
  animation: pulse 1s infinite alternate;
}

@keyframes pulse {
  0% { opacity: 1; }
  100% { opacity: 0.7; }
}

/* 销毁倒计时 */
.destroy-countdown {
  font-size: 24rpx;
  color: var(--red);
  margin-top: 8rpx;
  text-align: right;
}

.message-other .destroy-countdown {
  color: var(--red);
}

/* 消息内容 */
.message-content {
  font-size: 32rpx;
  word-break: break-all;
  line-height: 1.4;
}

/* 消息元数据（时间和状态） */
.message-meta {
  font-size: 24rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.message-self .message-meta {
  justify-content: flex-end;
  color: rgba(255, 255, 255, 0.8);
}

.message-other .message-meta {
  color: var(--light-text-color);
}

.message-time {
  margin-right: 10rpx;
}

.message-status {
  font-size: 24rpx;
}

/* 已销毁消息 */
.message-destroyed {
  align-items: center;
  opacity: 0.7;
}

.message-destroyed-notice {
  font-size: 28rpx;
  color: var(--light-text-color);
  background-color: rgba(0, 0, 0, 0.05);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 🔥 额外强制去除小尾巴的样式 */
.message-bubble,
.message-bubble::before,
.message-bubble::after,
.message-item .message-bubble,
.message-self .message-bubble,
.message-other .message-bubble,
.message-self .message-bubble::before,
.message-self .message-bubble::after,
.message-other .message-bubble::before,
.message-other .message-bubble::after {
  border-radius: 16rpx !important;
  border-top-left-radius: 16rpx !important;
  border-top-right-radius: 16rpx !important;
  border-bottom-left-radius: 16rpx !important;
  border-bottom-right-radius: 16rpx !important;
  border: none !important;
  outline: none !important;
}

/* 🔥 禁用所有伪元素 */
.message-bubble::before,
.message-bubble::after,
.message-self .message-bubble::before,
.message-self .message-bubble::after,
.message-other .message-bubble::before,
.message-other .message-bubble::after {
  display: none !important;
  content: none !important;
}